.g-hidden{:style => 'display: none'}
  .box-modal#loginModal
    .box-modal_close.arcticmodal-close
      Закрыть
    %span#title ХОЧУЛИ ? ДАВАЙТЕ ОПРЕДЕЛИМСЯ :)
    %ul#social
      %li.vk
        = link_to '&nbsp'.html_safe, user_omniauth_authorize_path(:vkontakte)
      %li.od
        %a{:href => '#'}
          &nbsp
      %li.ma
        %a{:href => '#'}
          &nbsp
    %span ИЛИ
    %ul.notice-bar{class:"error"}
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:id => 'sign_up_form', :style => 'display: none;'}, :format => :json, :remote => true) do |f|
      = devise_error_messages!
      = f.email_field :email, :placeholder => 'почта'
      = f.text_field :name, :placeholder => 'имя'
      = f.password_field :password, :placeholder => 'пароль', :autocomplete => "off"
      = f.text_field :phone, :placeholder => 'телефон', :style => 'display: none'
      = f.submit "хочу", :class => 'button', id: 'inp_sign_up_button'
      %li
        #shop
          %span.checkbox#shopcheck{:style => 'margin: 0 5px -8px 0;'}= f.check_box :shop
          %span Я магазин
        %div.registered
          %span#login_button.pointer Вход для зарегистрированных пользователей
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => 'login_form'}, :format => :json, :remote => true) do |f|
      = devise_error_messages!
      = f.email_field :email, :placeholder => 'почта'
      = f.password_field :password, :placeholder => 'пароль'
      = f.submit "вход", :class => 'button'
      %span#sign_up_button.pointer Регистрация
