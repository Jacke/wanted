#user.gi
  .info
    =render partial: "user_info"
  #nav_panel
    #block
      %a{:href => user_show_path(@user)}
        %span.big_arial=@user.items.length
        Вещей
    #block.active
      %a{:href => user_collections_path}
        %span.big_arial=@user.collections.length
        Коллекций
    #block
      %a{:href => mentions_path(@user)}
        %span.big_arial=@mentions.length
        Упоминаний
  -unless @items.empty?
    #grid_elements
      -unless @items.empty?
        =render partial: "items_grid"
  -else
    Коллекция пуста