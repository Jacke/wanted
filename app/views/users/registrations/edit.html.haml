.gi
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'user_form' }) do |f|
    = devise_error_messages!
    %ul
      %li= f.email_field :email, :autofocus => true
      %li= f.text_field :name, placeholder: 'Имя'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %li Currently waiting confirmation for: #{resource.unconfirmed_email}
      /%li= f.password_field :password, :autocomplete => "off"
      /%li= f.password_field :password_confirmation
      /%li= f.password_field :current_password
      %li= f.submit "Сохранить",:class => 'button'
  /%p
  /  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.