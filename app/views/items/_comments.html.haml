:javascript
  $(document).ready(function() {
    // Remove comment

    $('section#comment #info').hover(
      function(){$(this).children('.remove').show()},
      function(){$(this).children('.remove').hide()}
    )

    $(document).on("click", section#comment #info span.remove", function(){
      var id = $(this).attr('id')
      var comment = $(this).parents('section#comment')

      $.post('/comment/remove/'+id, function(data,status,xhr){
        showNotices(data.ans)
        comment.remove()
      })
      return false
    })
  })
- unless @comments.empty?
  - @comments.each do |comment|  
    %section#comment
      #name
        = link_to comment.item.name, item_path(comment.item)
      #info
        - if current_user == comment.user || current_user.admin
          %span.remove{:id => "#{comment.id}"}
        = link_to comment.user.name, user_show_path(comment.user)
        - unless comment.user.city.blank?
          ,
          =link_to comment.user.city, '#'
      %span.comment=simple_format(comment.content)
